{
    "compilerOptions": {
        "target": "es2019",
        "module": "CommonJS",
        "lib": ["es2019"],
        "rootDir": "./src",
        "outDir": "./bin",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    }
}
