{
    "compilerOptions": {
        "target": "es2019",
        "module": "ESNext",
        "lib": ["es2019"],
        "rootDir": "./src",
        "outDir": "dist",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "declaration": true
    }
}
